
  <div class="modal-create__wrapper">
  <h2 class='modal-create__heading'>Создать объявление</h2>
  <label class='modal-create__field'>
    Название товара
    <input type='text' class='modal-create__input' required minlength='2' />
  </label>

  <div class='modal-create__field'>
    Фото
    {{!-- <input type='file' class='modal-create__input  modal-create__file'/>
    <label for="file">+</label> --}}
    <div class='modal-create__file-wrap'>
    <input type="file" name="file" id="first" class="inputfile" />
    <label for="first" class="img-plus">      
      <img src="" class="modal-create__preview-img" />
    </label>
    <input type="file" name="file" id="second" class="inputfile" />
    <label for="second" class="img-plus" >
      <img src="" class="modal-create__preview-img" />
    </label>
    <input type="file" name="file" id="third" class="inputfile" />
    <label for="third" class="img-plus">
      <img src="" class="modal-create__preview-img" />
    </label>
    <input type="file" name="file" id="fourt" class="inputfile" />
    <label for="fourt" class="img-plus">
      <img src="" class="modal-create__preview-img" />
    </label>
    <input type="file" name="file" id="fifth" class="inputfile" />
    <label for="fifth" class="img-plus">
      <img src="" class="modal-create__preview-img" />
    </label>
    <input type="file" name="file" id="sixth" class="inputfile inputfile-sixth" />
    <label for="sixth" class="img-plus img-plus-sixth">
      <img src="" class="modal-create__preview-img" />
    </label>
  </div>        
  </div>
  <label class='modal-create__field'>
    Описание товара
    <textarea
      name='user-description'
      class='modal-create__input modal-create__description'
      placeholder='Введите описание'
    ></textarea>
  </label>
  <label class='modal-create__field'>
    Категория товара
    {{!-- {{#each this.data}} --}}
    <select class='modal-create__select'>
      <option></option>
      <option></option>      
    </select>
    {{!-- {{/each}} --}}
  </label>
  <label class='modal-create__field'>
    Цена
    <input type='text' class='modal-create__input' placeholder='0.00 €' />
  </label>
  <label class='modal-create__field'>
    Телефон
    <input
      type='tel'
      name='user-tel'
      class='modal-create__input'
      pattern='[0-9]{3}-[0-9]{3}-[0-9]{2}-[0-9]{2}'
      title='096-999-99-99'
      placeholder='+38 (0--) --- -- --'
      required
    />
  </label>

  <button type='submit' class='modal-create__btn'>Добавить</button>
</div>